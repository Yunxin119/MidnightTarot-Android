<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <solid android:color="#D9707070" />
            <corners android:radius="16dp" />
        </shape>
    </item>
    <item android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="3dp">
        <shape android:shape="rectangle">
            <corners android:radius="16dp" />
            <stroke
                android:width="1.5dp"
                android:color="#80B39DDB" />
        </shape>
    </item>
    <item android:left="12dp" android:top="12dp" android:right="12dp" android:bottom="12dp">
        <shape android:shape="rectangle">
            <corners android:radius="12dp" />
            <stroke
                android:width="0.5dp"
                android:color="#40B39DDB"
                android:dashWidth="4dp"
                android:dashGap="4dp" />
        </shape>
    </item>
</layer-list>