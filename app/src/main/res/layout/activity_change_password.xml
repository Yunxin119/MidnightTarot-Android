<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_main"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/sun_image"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_marginBottom="32dp"
            android:contentDescription="Logo"
            android:src="@drawable/launch" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginBottom="32dp"/>

        <EditText
            android:id="@+id/current_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/text_accent"
            app:hintTextColor="@color/text_accent"
            android:textColorHint="@color/text_accent"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/text_accent"
            android:background="@drawable/textarea"
            android:hint="Current Password"
            android:inputType="textPassword"
            android:textColor="@color/text_primary"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/text_accent"
            app:hintTextColor="@color/text_accent"
            android:textColorHint="@color/text_accent"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/text_accent"
            android:background="@drawable/textarea"
            android:hint="New Password"
            android:inputType="textPassword"
            android:textColor="@color/text_primary"
            android:padding="16dp"/>

        <EditText
            android:id="@+id/confirm_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/text_accent"
            app:hintTextColor="@color/text_accent"
            android:textColorHint="@color/text_accent"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@color/text_accent"
            android:background="@drawable/textarea"
            android:hint="Confirm New Password"
            android:inputType="textPassword"
            android:textColor="@color/text_primary"
            android:padding="16dp"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textAllCaps="false"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            app:cornerRadius="8dp"
            android:foreground="@drawable/button_stroke"
            android:background="@drawable/button_glow_effect"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_back"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textAllCaps="false"
            android:padding="16dp"
            app:cornerRadius="8dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:background="@drawable/button_glow_effect"/>

    </LinearLayout>
</ScrollView>